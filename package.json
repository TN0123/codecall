{
  "name": "codecall",
  "displayName": "codecall",
  "description": "Your coding companion with a beautiful UI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codecall.sidebarView",
    "onCommand:codecall.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codecall.helloWorld",
        "title": "Hello World"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codecall-sidebar",
          "title": "Codecall",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "codecall-sidebar": [
        {
          "type": "webview",
          "id": "codecall.sidebarView",
          "name": "Codecall"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && node esbuild.js --production",
    "compile:extension": "tsc -p ./",
    "compile:webviews": "node esbuild.js",
    "watch": "npm run compile:webviews && concurrently \"tsc -watch -p ./\" \"node esbuild.js --watch\"",
    "dev": "npm run compile && cursor --extensionDevelopmentPath=\"$PWD\"",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "esbuild": "^0.20.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
