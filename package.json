{
  "name": "codecall",
  "displayName": "codecall",
  "description": "Your coding companion with a beautiful UI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codecall.sidebarView",
    "onCommand:codecall.helloWorld",
    "onCommand:codecall.openPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codecall.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "codecall.openPanel",
        "title": "Codecall: Open Dashboard"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codecall-sidebar",
          "title": "Codecall",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "codecall-sidebar": [
        {
          "type": "webview",
          "id": "codecall.sidebarView",
          "name": "Codecall"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "dev": "tsc -p ./ && cursor --extensionDevelopmentPath=\"$PWD\" & tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
